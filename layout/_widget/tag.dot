{{? it.site.tags.length }}
<div class="widget tag">
  <h3 class="title">{{! it.__('tags') }}</h3>
  <ul class="entry">
  {{ it.site.tags.sort('name').each(function(item){ }}
    <li><a href="{{= it.config.root }}{{= item.path }}">{{! item.name }}</a><small>{{! item.posts.length }}</small></li>
  {{ }); }}
  </ul>
</div>
{{?}}