<article class="{{! item.layout }}">
  {{? item.photos }}
    {{#def.load('_partial/post/gallery'); }}
  {{?}}
  <div class="post-content">
    <header>
      {{? item.layout != 'page' }}
        <div class="icon"></div>
        <time datetime="{{! item.date.toDate().toISOString() }}"><a href="{{= it.config.root }}{{= item.path }}">{{! item.date.format(it.config.date_format) }}</a></time>
      {{?}}
      {{#def.load('_partial/post/title') }}
    </header>
    <div class="entry">
      {{? item.excerpt && index }}
        {{= item.excerpt }}
      {{??}}
        {{= item.content }}
      {{?}}
    </div>
    <footer>
      {{? index }}
        {{? item.excerpt }}
          <div class="alignleft">
            <a href="{{= it.config.root }}{{= item.path }}#more" class="more-link">{{! theme.excerpt_link }}</a>
          </div>
        {{?}}
        {{? item.comment && it.config.disqus_shortname }}
        <div class="alignright">
          <a href="{{= item.permalink }}#disqus_thread" class="comment-link">Comments</a>
        </div>
        {{?}}
      {{??}}
        {{#def.load('_partial/post/category') }}
        {{#def.load('_partial/post/tag') }}
        {{#def.load('_partial/post/share') }}
      {{?}}
      <div class="clearfix"></div>
    </footer>
  </div>
</article>

{{#def.load('_partial/comment') }}